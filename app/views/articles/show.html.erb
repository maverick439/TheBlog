<div style="padding: 20px">
	<h1>Show Article</h1>
	<p>
		 <h3>Title:  <%= @article.title %> </h3>
	</p>
	<br/>
	<h4>
		<p>
	 		Description:  <%= @article.description %>
		</p>
	</h4>
	<br/>

	<%= link_to "Edit", edit_article_path(@article) %> &nbsp; &nbsp;
	<%= link_to 'Back', articles_path %> &nbsp; &nbsp;
	<%= link_to "Delete", article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete this article?"} %>
	<br/>
	<div id="create-likes">
	<%= button_to 'Like', article_likes_path(@article), method: :article, class:"btn btn-primary",remote: true %>
	</div>
	<div id="likes-count">
	<%= @article.likes.count %> <%= (@article.likes.count) == 1 ? 'Like' : 'Likes'%>
	</div>
	<br/>

	<!-- TO DISPLAY ALL THE COMMENTS COMMENTS->_FORM.HTML.ERB -->
	<div id="create-comment">
	<%= render partial: 'comments/form', locals: {article: @article, comment: @comment} %> 
 	</div>
 	
	<div id="comments_count">
		<h3>Comments (<%= @article.comments.size %>)</h3>
	</div>

	<div id="article_comment">
	<%= render partial: 'articles/comment', locals: {comment: @comment}, collection: @article.comments.reverse %>
	</div>
</div>
